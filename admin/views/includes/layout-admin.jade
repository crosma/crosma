!!! 5
html
	head
		title #{config.title} - #{config.site_name}
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="")
		meta(name="author", content="Matt Crossley")
	
		each css_file in config.css_files
			link(rel="stylesheet", type='text/css', href=css_file)
			
		block css
			
		//if lt IE 8
			script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
		
		block head
		
	body

		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					a.brand(href="/") Admin Tools
					if config.logged_in

						ul.nav
							li.dropdown
								a(href="#", data-toggle="dropdown").dropdown-toggle
									i.icon-hdd
									|  Data
									spam.caret
								ul.dropdown-menu
									li
										a(href="/users")
											i.icon-user
											|  Manage Users
									
							li.dropdown
								a(href="#", data-toggle="dropdown").dropdown-toggle
									i.icon-tasks
									|  Tools
									span.caret
								ul.dropdown-menu
									li
										a(href="/purge")
											i.icon-ban-circle
											|  Purge Caches
									li
										a(href="/crons")
											i.icon-time
											|  Cron Tasks
											
							li
								a(href="/logout")
									i.icon-off
									| Log Out
									
									
						form.navbar-search.form-search.pull-right
							.input-prepend
								span.add-on
									i.icon-search
							.input-append
								input(type="text").span2.square
								button(type="submit").btn Search

								
			
		.container
			if config.logged_in
				ul.breadcrumb
					if breadcrumbs.length == 0
						li.active  Add a breadcrumb.
					else if breadcrumbs.length > 1
						- for (i=0; i<breadcrumbs.length-1; i++)
							li
								a(href=breadcrumbs[i].href) #{breadcrumbs[i].text}
								span.divider /
								
					if breadcrumbs.length > 0
						li.active  #{breadcrumbs[breadcrumbs.length-1].text}

			if (msgs = flash_errs()) && !!msgs.length
				.row
					.offset1.span10
						.alert.alert-error
							ul
								each msg in msgs
									li!= msg
			
			if (msgs = flash_msgs()) && !!msgs.length
				.row
					.offset1.span10
						.alert.alert-info
							ul
								each msg in msgs
									li!= msg
			

			

			
			
			
		
			block content				
						
			hr

			footer.muted
				small
					p Company &copy; 2012
				

					
							
		each js_file in config.js_files
			script(type="text/javascript", src=js_file)
			
		block scripts
		
		if config.NODE_ENV == 'production'
			include ../includes/google.html